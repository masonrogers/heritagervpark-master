<!DOCTYPE html>
<html>
<head>
	<title>Heritage RV Park Reservations</title>
	<link rel="stylesheet" href="/css/bootstrap.css" />
	<link rel="stylesheet" href="/css/style.css" />
</head>
<body style="background-color: #D8D8D8; margin: 0px">
    
        <div style="background-color: #2E4053; margin-top: 0px;">
            
            <div class="container" style="padding-top: 10px; padding-bottom: 10px;">
                <nav>
                    <ul class="nav nav-pills pull-right">
                        {{#if user}}
                            <li role="presentation"><a href="/">Reservations</a></li>
                            <li role="presentation"><a href="/users/logout">Logout {{user.username}}</a></li>
                        {{else}}
                            <li role="presentation"><a href="/users/login">Login</a></li>
                            <li role="presentation"><a href="/users/register">Register</a></li>
                    {{/if}}
                  </ul>
                </nav>
                <div class="row">
                    <div class="col-xs-4">
                        <img class="img-responsive" src="/imgs/logo.png">
                    </div>
                </div>
            </div>
        </div>
    
	<div class="container" style="margin-top: 30px;">

      <div class="row">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          
          {{{body}}}
        </div>

        
      </div>

      <footer class="footer">
        <p>&copy; 2017 Heritage RV Park</p>
      </footer>

    </div> <!-- /container -->
</body>
</html>
